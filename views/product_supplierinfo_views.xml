<odoo>
  <record id="view_supplierinfo_tree_discount_chain" model="ir.ui.view">
    <field name="name">product.supplierinfo.tree.discount.chain</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='discount']" position="after">
        <field name="discount_chain"/>
      </xpath>
    </field>
  </record>

  <record id="view_supplierinfo_form_discount_chain" model="ir.ui.view">
    <field name="name">product.supplierinfo.form.discount.chain</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='discount']" position="attributes">
        <attribute name="readonly">True</attribute>
      </xpath>
      <xpath expr="//field[@name='discount']" position="after">
        <field name="discount_chain" placeholder="Ej: 5+3+10" 
       help="Descuentos secuenciales aplicados al precio de proveedor."/>
      </xpath>
    </field>
  </record>
</odoo>